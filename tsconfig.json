{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "types": ["jest"],
    "module": "commonjs",
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
